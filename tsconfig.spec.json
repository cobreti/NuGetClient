/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "types": [
      "jasmine",
      "node"
    ],
    "lib": ["es2015","dom"]
  },
  "files": [
    "test.ts",
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
